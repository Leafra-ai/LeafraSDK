{
  "sdk": {
    "name": "LeafraSDK",
    "version": "1.0.0",
    "debug_mode": false,
    "max_threads": 4,
    "buffer_size": 1024
  },
  "chunking": {
    "enabled": true,
    "chunk_size": 500,
    "overlap_percentage": 0.15,
    "preserve_word_boundaries": true,
    "include_metadata": true,
    "size_unit": "tokens",
    "token_approximation_method": "word_based"
  },
  "parsing": {
    "supported_formats": ["txt", "pdf", "docx", "xlsx"],
    "pdf_enabled": true,
    "text_encoding": "utf-8"
  },
  "logging": {
    "level": "info",
    "show_file_info": true,
    "log_to_file": false,
    "log_file_path": "leafra_sdk.log"
  },
  "performance": {
    "enable_parallel_processing": true,
    "max_file_size_mb": 100,
    "memory_limit_mb": 512
  }
} 